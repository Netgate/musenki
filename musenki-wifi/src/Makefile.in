VPATH       	= @srcdir@
srcdir  	= @srcdir@
top_srcdir  	= @top_srcdir@
prefix 		= @prefix@
bindir 		= @bindir@
includedir	= @includedir@
datarootdir     = @datarootdir@
sysconfdir      = @sysconfdir@
datarootdir	= @datarootdir@
localstatedir   = @localstatedir@
libdir          = @exec_prefix@/lib

CC		= @CC@
CFLAGS  	= @CFLAGS@ -fPIC 
INSTALLFLAGS  	= @INSTALLFLAGS@ 

INCLUDES 	= @INCLUDES@ 
CPPFLAGS  	= @CPPFLAGS@ -fPIC

# Here is where example yang appears
YANG_INSTALLDIR  = @YANG_INSTALLDIR@

# Local yang files to install
YANGSPECS	 = yang/musenki-wifi@2022-03-24.yang

# Example backend plugin
# There may also be restconf/cli/netconf plugins which are not covered here, see
# eg clixon main example
PLUGIN       = wifi_backend_plugin.so
PLUGIN_SRC   = wifi_init.c do_command.c uci_interface.c wifi_controls.c \
	       wifi_state_data.c wifi_transaction_begin.c wifi_transaction_commit.c \
	       wifi_transaction_end.c wifi_transaction_validate.c

PLUGIN_OBJ   = $(PLUGIN_SRC:%.c=%.o)

.SUFFIXES: .c .o

# implicit rule
.c.o:
	$(CC) $(INCLUDES) $(CPPFLAGS) $(CFLAGS) -c $<

.PHONY: all clean depend install 
all: $(PLUGIN)

$(PLUGIN): $(PLUGIN_OBJ)
	$(CC) -Wall -shared $(LDFLAGS) -o $@ -lc $(PLUGIN_OBJ) -lclixon -lclixon_backend

CLISPECS = wifi_cli.cli

clean:
	rm -f $(PLUGIN) $(PLUGIN_OBJ)

distclean: clean
	rm -f Makefile *~ .depend

install: $(CLISPECS) wifi.xml clixon $(PLUGIN)
	install -d -m 0755 $(DESTDIR)$(sysconfdir)
	install -m 0644 wifi.xml $(DESTDIR)$(sysconfdir)
	install -d -m 0755 $(DESTDIR)$(sysconfdir)/init.d
	install -m 0755 clixon $(DESTDIR)$(sysconfdir)/init.d/
	install -d -m 0755 $(DESTDIR)$(libdir)/wifi
	install -d -m 0755 $(DESTDIR)$(libdir)/wifi/clispec
	install -d -m 0755 $(DESTDIR)$(libdir)/wifi/backend
	install -m 0644 $(CLISPECS) $(DESTDIR)$(libdir)/wifi/clispec
	install -d -m 0755 $(DESTDIR)$(localstatedir)
	install -d -m 0755 $(DESTDIR)$(localstatedir)/wifi
	install -m 0644 startup_db $(DESTDIR)$(localstatedir)/wifi/
	install -d -m 0755 $(DESTDIR)$(YANG_INSTALLDIR)
	install -m 0644 $(YANGSPECS) $(DESTDIR)$(YANG_INSTALLDIR)
	install -m 0644 $(INSTALLFLAGS) $(PLUGIN) $(DESTDIR)$(libdir)/wifi/backend

uninstall: 
	rm -rf $(DESTDIR)$(sysconfdir)/wifi.xml
	rm -rf $(DESTDIR)$(libdir)/wifi
	rm -rf $(DESTDIR)$(localstatedir)/wifi
	for i in $(YANGSPEC) ; \
	do rm $(DESTDIR)$(YANG_INSTALLDIR)/$$i; done

depend:
	$(CC) $(DEPENDFLAGS) $(INCLUDES) $(CFLAGS) -MM $(SRC) > .depend

#include .depend

